@model IEnumerable<ReservationApp.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<div class="container pt-3">
    <p>
        <a class="text-info" asp-action="Create"><h2 class="text-center">Create New Reservation</h2></a>
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeReservationid)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.User.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User.counter)
                </th>*@
                <th>
                    Operations
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeReservation.Nom)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.User.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.counter)
                    </td>*@
                    <td>
                        <a class="btn btn-warning text-black-50 btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-dark btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>